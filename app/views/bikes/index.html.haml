#bikes-search
  %span#query_searched
    = @query
  %span#attribute_values_searched
    = @attribute_select_values
  %span#stolenness_query{data: {stolen: @stolenness[:stolen], nonstolen: @stolenness[:non_stolen] }}

- if @bikes.present?
  %h1
    Indexed Bikes

  %ul.bike-boxes
    = render partial: "/bikes/bike", collection: @bikes, :locals => {target: "show" }


  .paginate-container
    = will_paginate @bikes 

- else
  %section.bottom-of-page
    %h3
      Oh no!
    %h1
      No bikes matched your search!