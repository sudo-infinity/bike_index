!!!
%html
  %head
    %meta{:charset => "utf-8"}
    %meta{"http-equiv" => "X-UA-Compatible", :content => "IE=edge,chrome=1"}
    %meta{:name => "viewport", :content => "width=device-width, initial-scale=1, maximum-scale=1"}
    %meta{:name => "description", :content => "Spoke card a bike." }
    %title= content_for?(:title) ? yield(:title) : "Bike Index"
    <link rel="shortcut icon" href="/favicon.ico" />
    = stylesheet_link_tag "spokecard", :media => "all"
    = csrf_meta_tags
    <!-- Pulled from https://code.google.com/p/html5shiv/ -->
    <!--[if lt IE 9]>
    <script src="//html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <link href='https://fonts.googleapis.com/css?family=Raleway:300,400,500,600,700' rel='stylesheet' type='text/css'>

%body
  .spokecard-wrap
    %span.tleft
    %span.bleft
    %span.tright
    %span.bright

    = image_tag "/assets/mace-man.png", alt: "Lunatic brigand with a mace attacking a lovely steed", title: "Lunatic brigand with a mace attacking a lovely steed", class: "mace-man"
    
    %img.qr-code{ src: "#{bike_url(@bike)}.gif", alt: "This bike's qrcode" }

    = image_tag "/assets/lovely-steed.png", alt: "The lovely steed the lunatic with a mace is attacking (duh)", title: "The lovely Steed", class: "steed"

    %h2
      BikeIndex.org
