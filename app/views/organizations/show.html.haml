%h1
  #{@organization.name} bikes

%section.full-screen-table
  %table#org-bikes-table.table.table-striped.table-bordered
    %thead
      %th
        Date indexed
      %th
        Manufacturer
      %th.medium-screens
        Color&nbsp;&nbsp;
      %th.medium-screens
        Sent to
      %th.large-screens
        Created by
      %th.large-screens
        Rear Wheel size

    %tbody
      - @bikes.each do |bike|
        %tr
          %td
            - if bike.created_at.today?
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              Today at #{bike.created_at.strftime("%-I %p")}
            - elsif Date.yesterday().beginning_of_day() <= bike.created_at
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              Yesterday at #{bike.created_at.strftime("%-I %p")}
            - else
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              = bike.created_at.strftime("%-m/%-d/%Y at %-I %p")
          %td
            = link_to bike.manufacturer_name, bike_url(bike)
          %td.medium-screens
            = bike.primary_frame_color.name
          %td.medium-screens
            - if bike.created_with_token
              %span.less-strong
                Free bike token
            - else
              = bike.owner_email
          %td.large-screens
            - if bike.creator_id.present?
              - u = User.find(bike.creator_id)
              - if u.name.present?
                = u.name
              - else
                = u.email
            - else
              Sorry, we're not sure who created this
          %td.large-screens
            = bike.rear_wheel_size.name

