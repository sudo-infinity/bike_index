= form_for :session, url: session_url do |f|
  .field
    = f.email_field :email, placeholder: "Email address"
  .field
    = f.password_field :password, placeholder: "Password"
  .field.rememberable
    %label.checkbox
      = f.check_box :remember_me, value: '1', checked: true
      Keep me logged in
  = f.submit "Log in", class: 'button-blue'

%p
  = link_to 'Forgot your password?', '/users/request_password_reset', class: 'forgotten-pass form-link'

%a.facebook-login{href: "/auth/facebook" }
  Log in with
  %span
    = image_tag "/assets/facebook.svg"
%p.strava-login
  %a{href: "/auth/strava" }
    Log in with Strava

%p.switch-login-signup
  Don't have an account? 
  = link_to 'Sign up instead', new_user_url