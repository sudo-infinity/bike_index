%section.sbr-main-section
  .receptacle
    .inner-recep
      = link_to 'Register your stolen bike', new_bike_url(stolen: true), class: 'list-stolen-bike'
      .stolen-registry-logo
        = image_tag '/assets/stolen/stolen-registry.svg'
      %h1
        Stolen Bike Registry

      = form_tag bikes_path, method: :get, class: 'sbr-search-fields' do 
        = hidden_field_tag :stolen, true
        = hidden_field_tag :search_type, 'description'
        #search-type-tabs
          %a.search-type-tab.active{ href: '#', data: { stype: 'description' } }
            %span.medium-screens
              Search bike
            descriptions
          %a.search-type-tab{ href: '#', data: { stype: 'serial' } }
            %span.medium-screens
              Search bike
            serials
        .sbr-search-inputs
          = text_field_tag :query_typed, params[:query_typed], class: 'sbr-bike-search', autofocus: true
          = button_tag(type: "submit", class: "sbrbtn") do
            = image_tag '/assets/stolen/search.svg'
          .proximity#stolen-proximity
            %span
              Stolen near
            = text_field_tag :proximity, params[:proximity], placeholder: 'anywhere'
.sbr-banner
  Over 
  / = StolenRecord.unscoped.where(current: false).count
  1999
  bikes recovered
  %span.medium-screens
    \- and counting

%section.sbr-get-involved
  .receptacle
    .inner-recep
      %h2
        Get Involved! Help us stop bike theft

      .involve-yerself

        .involve-report
          %h3
            Report bike theft issues:
          .involve-report-form
            = form_for @feedback do |f|
              - if @feedback.errors.any?
                #alert-block
                  .alert.alert-error
                    %a.close{"data-dismiss" => "alert"} Ã—
                    %h4
                      Please fix the following 
                      = pluralize(@feedback.errors.count, "error")
                    %ul
                      - @feedback.errors.full_messages.each do |msg|
                        %li 
                          = msg  
              .report-type
                %label
                  = f.radio_button :title, "Someone is selling a stolen bike"
                  Report someone selling a stolen bike
                %label
                  = f.radio_button :title, "Bike ChopShop report"
                  Report a bicycle chop shop
                    
              .contact-text
                = f.text_area :body, placeholder: "Where is this happening? URL, address - any information you have", rows: 5
              .contact-actions.control-group
                = f.email_field :email, placeholder: "Your email address"
                = f.submit 'Send alert!', class: 'btn pull-right'

        .involve-widget
          %h3
            Add a recent stolen bikes widget to your site.
          .stolen-recent-widget
            %ul
              - @stolen_bikes.each do |bike|
                %li
                  - if bike.thumb_image.present?
                    = link_to bike.thumb_image, bike_url(bike), class: 'stolen-thumb'
                  %h4
                    = link_to bike.title, bike_url(bike)
                  %p
                    Stolen from 
                    = bike.current_stolen_record.city if bike.current_stolen_record.city.present?
                    = bike.current_stolen_record.state.abbreviation if bike.current_stolen_record.state.present?
                    on
                    - if bike.current_stolen_record.date_stolen.today?
                      Today at #{bike.current_stolen_record.date_stolen.strftime("%-I %p")}
                    - elsif Date.yesterday().beginning_of_day() <= bike.current_stolen_record.date_stolen
                      Yesterday at #{bike.current_stolen_record.date_stolen.strftime("%-I %p")}
                    - else
                      = bike.current_stolen_record.date_stolen.strftime("%-m/%-d/%Y")
            .get-widget-code
              Get the 
              = link_to 'WordPress plugin', 'https://github.com/purcebr/bike-index-listings'
              or 
              = link_to 'HTML code', 'https://github.com/sethherr/bike-index-listings'
            

