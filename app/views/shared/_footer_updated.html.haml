%footer.global-footer#page-foot
  .container
    %ul.footer-links
      %li
        = link_to "Register a bike", choose_registration_url
        %ul
          %li
            = link_to "Bike Index partner organizations", where_url         
          %li
            = link_to "Bike Index resources", resources_url
          
      %li
        = link_to "About the Bike Index", about_url  
        %ul       
          %li
            = link_to "Bike Index news", news_index_url
          %li
            = link_to "List of manufacturers", manufacturers_url
          %li
            = link_to "Donate to Bike Index", support_the_index_url
         
      %li.contact-nav-btns
        = link_to "Help", help_url
        %ul
          %li
            = link_to "Contact us", contact_us_url
            = link_to "Sign up a shop or organization", vendor_signup_url
            = link_to "API Documentation", documentation_index_url
            
      %li.social
        %ul
          %li
            = link_to image_tag("/assets/facebook.svg", alt: "Bike Index Facebook"), "https://facebook.com/bikeindex", class: 'footer-facebook'
          %li
            = link_to image_tag("/assets/twitter.svg", alt: "Bike Index Twitter"), "https://twitter.com/BikeIndex", class: 'footer-twitter'
          %li
            = link_to image_tag("/assets/instagram.svg", alt: "Bike Index Instagram"), "http://instagram.com/bikeindex/", class: 'footer-instagram'

    %p
      %span{data: {license: "https://github.com/bikeindex/bike_index/blob/master/LICENSE"}}
        2015 &copy; Bike Index.
      - if current_user.present? && current_user.has_membership?
        #{link_to "Privacy policy", privacy_url}, #{link_to "vendor terms", vendor_terms_url}
      - else
        #{link_to "Privacy policy", privacy_url}
      and #{link_to "terms and conditions", terms_url}.