= javascript_include_tag "//www.google.com/jsapi", "chartkick" 
/ = javascript_include_tag "path/to/highcharts.js", "chartkick"

%section
  %h1
    Bike Index graphs

#graph-holder
  %h2
    Users
  = line_chart users_admin_graphs_path

  %h2
    Bikes this past week
  - bikes = [ { name: 'Registrations', data: Bike.unscoped.group_by_day(:created_at, range: 1.weeks.ago.midnight..Time.now).count }, { name: 'Stolen', data: Bike.unscoped.where(stolen: true).group_by_day(:created_at, range: 1.weeks.ago.midnight..Time.now).count }]
    
  / = line_chart Bike.unscoped.group_by_day(:created_at, range: 1.weeks.ago.midnight..Time.now).count
  = line_chart bikes
  / bikes_admin_graphs_path(past_week: true), discreet: true

  %h2
    Bikes Overall
  = line_chart bikes_admin_graphs_path

/ # = pie_chart({"Football" => 10, "Basketball" => 5})

/ = line_chart users_admin_graphs_path


