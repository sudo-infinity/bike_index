%header.with-subtitle.padded
  %h1
    Viewing
    = @organization.name
  %p
    = link_to "Edit organization", edit_admin_organization_url(@organization)

%section
  .dl-holder.padded
    %dl.dl-horizontal
      %dt Map
      %dd
        - if @organization.show_on_map
          Shown on map
        - else
          %strong
            Not shown
      
      = @organization.dl_from_attribute("org_type", "Type")
      = @organization.dl_from_attribute("slug")
      = @organization.dl_from_attribute("access_token")
      
      
    %dl.dl-horizontal
      = @organization.dl_list_item(@organization.users.count, "Users")
      = @organization.dl_list_item(@organization.sent_invitation_count, "Sent invites")
      = @organization.dl_list_item(link_to(@organization.available_invitation_count, admin_organization_invitation_url(@organization.id)), link_to("Remaining invites", admin_organization_invitation_url(@organization.id)))
      = @organization.dl_from_attribute("website")
   

    - if @organization.is_suspended
      %h2.red-text
        Organization is suspended



%section.full-screen-table
  %h2
    = pluralize(@bikes.count, "Bike")

  %table#org-bikes-table.table.table-striped.table-bordered
    %thead
      / %th
      /   Link&nbsp;&nbsp;
      %th
        Date indexed
      %th
        Sent to
      %th
        Manufacturer
      %th
        Color&nbsp;&nbsp;
      %th
        Rear Wheel size

    %tbody
      - @bikes.each do |bike|
        %tr
          / %td
          / # = link_to "&rarr;".html_safe, bike_url(bike)
          %td
            - if bike.created_at.today?
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              Today at #{bike.created_at.strftime("%-I %p")}
            - elsif Date.yesterday().beginning_of_day() <= bike.created_at
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              Yesterday at #{bike.created_at.strftime("%-I %p")}
            - else
              %span.hidden
                = bike.created_at.strftime("%-m.%-d.%Y %-H.%M")
              = bike.created_at.strftime("%-m/%-d/%Y at %-I %p")
          %td
            - if bike.created_with_token
              %span.less-strong
                Free bike ticket
            - else
              = bike.owner_email
          %td
            = bike.manufacturer_name
          %td
            = bike.primary_frame_color.name
          %td
            = bike.rear_wheel_size.name


%section.full-screen-table

  %h2
    = pluralize(@organization.users.count, "User")

  %table#org-users-table.table.table-striped.table-bordered
    %thead
      %th
        Edit&nbsp;
      %th
        Name
      %th
        Email
      %th
        Total indexed
    %tbody
      - @organization.users.each do |user|
        %tr
          %td
            = link_to "&rarr;".html_safe, edit_admin_user_url(user)
          %td
            = user.name
          %td
            = user.email
          %td
            = @bikes.where(creator_id: user.id).count


%ul
  - @organization.users.each do |user|
    %li
      %p
        = user.name
        = user.email
%hr
- if @organization.locations.any?
  - if @organization.locations.count > 1
    %h3.padded
      = pluralize(@organization.locations.count, "Location")
  .row-fluid.locations-list
    - @organization.locations.each do |location|
      .span4
        .alert.alert-info
          - if location.name
            %p
              Name:
              = location.name

          - if location.phone
            %p
              Phone:
              = number_to_phone(location.phone)

          - if location.street
            %p
              Street address:
              = location.street

.actions.padded
  = link_to "Manage organization invitations", admin_organization_invitation_url(@organization.id), class: "button-yellow"
  = link_to "Edit", edit_admin_organization_url(@organization), class: "button-green"
  = link_to "Delete #{@organization.name}!", admin_organization_url(@organization), method: :delete, confirm: "Are you sure?", class: "button-red"